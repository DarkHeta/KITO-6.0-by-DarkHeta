particle_system Hit1
{
    material FX/Hit1
    particle_width 1
    particle_height 1
    cull_each false
    quota 1000

    emitter Point
    {
        angle 50
        emission_rate 70
        time_to_live 0.5
        direction 0 1 0
        velocity_min 50
        velocity_max 70
	colour  1 0.85 0.7 1
    }

    // Gravity
    affector LinearForce
    {
        force_vector 0 -150 0
        force_application add
    }
    affector ColourFader
    {
        red -1
        green -1
        blue -1
    }
}
