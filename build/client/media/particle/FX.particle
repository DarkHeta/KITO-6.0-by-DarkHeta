particle_system Aureola
{
    material        FX/Aureola
    particle_width  25
    particle_height 25
    cull_each       false
    quota           10
    billboard_type  perpendicular_common
    common_direction 0 1 0
    common_up_vector 0 0 1

    emitter Point
    {
        angle           0
        emission_rate   0.5
        time_to_live    4
        position        0 0 0
        direction       0 1 0
        velocity_min  	0
        velocity_max  	3
	colour 1 1 1 0
    }

    affector LinearForce
    {
        force_vector      0 10 0
        force_application add
    }

    affector ColourFader2
    {
	red1 +0.3
	green1 +0.3
	blue1 +0.3
        alpha1 +1.4

        red2 -0.5
        green2 -0.5
        blue2 -0.5
        alpha2 -0.6666

        state_change 2.5
    }

    affector Rotator
    {
        rotation_range_start 300
	rotation_range_end 360
        rotation_speed_range_start 90
        rotation_speed_range_end 180
    }
}
particle_system Flame
{
    material Flame
    particle_width 1.2
    particle_height 1.5
    cull_each false
    quota 10000

    emitter Point
    {
        angle 30
        emission_rate 100
        time_to_live 0.5
        direction 0 1 1
        velocity_min 0
        velocity_max 3
	colour_range_start 1 0.25 0
    	colour_range_end 1 0.75 0
    }

    affector LinearForce
    {
        force_vector 0 15 0
        force_application add
    }
    affector ColourFader
    {
        red -0.7
        green -1.2
        blue -0.7
    }
    affector Scaler
    {
	rate -2.2
    }
    affector DirectionRandomiser
    {
	randomness 5
	scope 0.5
    }
}
