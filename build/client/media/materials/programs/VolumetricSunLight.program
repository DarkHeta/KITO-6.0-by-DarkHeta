vertex_program VolumetricSunLightSceneWithOutTextures_VP hlsl
{
	source VolumetricSunLight_Nontextured.hlsl
	entry_point main_vp
	target vs_1_1
	
	default_params 
    { 
        param_named_auto		worldViewProj	worldviewproj_matrix 
        param_named				color			float3	0.0 0.0 0.0
    }
}

