material Terrain/Water
{
	technique
	{
		pass
		{
			cull_hardware none
			cull_software none
			scene_blend alpha_blend
			depth_write off

			texture_unit
			{
				texture Water01.png
				scale 2.5 2.5
				scroll_anim -0.15 -0.15
			}
			texture_unit
			{
				texture Water02.png
				scale 2.5 2.5
				scroll_anim -0.25 0.1
			}
		}
	}
}
