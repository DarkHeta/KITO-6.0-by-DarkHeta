material Terrain/Magma
{
	technique
	{
		pass
		{
			lighting off
			cull_hardware none
			cull_software none

			texture_unit
			{
				texture magma_tex.jpg
				scale 2.5 2.5
				scroll_anim -0.03 -0.05
			}
		}
	}
}
material Terrain/LargeMagma
{
	technique
	{
		pass
		{
			lighting off
			cull_hardware none
			cull_software none

			texture_unit
			{
				texture magma_tex.jpg
				scale 0.05 0.05
				scroll_anim -0.03 -0.05
				colour_op modulate
			}
			texture_unit
			{
				texture magma_tex.jpg
				scale 0.07 0.07 
				scroll_anim -0.05 0.01
