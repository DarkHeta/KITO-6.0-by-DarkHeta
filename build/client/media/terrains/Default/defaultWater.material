material Waterfall
{
	technique
	{
		pass
		{
			cull_hardware none
			cull_software none
			scene_blend alpha_blend
			depth_write off

			texture_unit
			{
				texture waterfall.png
				scroll_anim 0 0.75
			}
			texture_unit
			{
				texture waterfallmask.png
				colour_op alpha_blend
				tex_address_mode clamp
			}
		}
	}
}
