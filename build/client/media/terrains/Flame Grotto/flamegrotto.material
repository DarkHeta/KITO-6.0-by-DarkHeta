material Terrain/flameGrottoMagma
{
	technique
	{
		pass
		{
			lighting off
			cull_hardware none
			cull_software none

			texture_unit
			{
				texture magma_tex.jpg
				scale 1.5 1.5
				scroll_anim 0.02 0.02
			}
		}
	}
}
