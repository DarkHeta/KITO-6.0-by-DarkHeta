material flameGrottoCrystal
{
	technique
	{
		pass Main
		{
			depth_write off
			scene_blend add
			texture_unit
			{
				texture flamegrottocrystal_tex.jpg
			}
		}
	}
}
material shadowveldtRedGlow
{
	receive_shadows off
	technique
	{
		pass
		{
			lighting off
			depth_write off
			scene_blend add
			fog_override true

			texture_unit
			{
				texture shadowveldtRedGlow.jpg
				wave_xform scale_x sine 0.8 0.2 0 0.1
				wave_xform scale_y sine 0.8 0.2 0 0.1
			}
		}
	}
}